{
  "name": "devtools",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "node ./build/server",
    "watch": " nodemon -e ts -w src -x npm run watch:serve",
    "watch:serve": "ts-node src/server",
    "test:watch": "mocha -r ts-node/register tests/**/*.spec.ts --watch",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts --exit",
    "lint": "eslint  src/**/*.ts --fix",
    "format": "prettier --write .",
    "setup-commit": "npx cz-customizable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Goldhumorist/devtools.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Goldhumorist/devtools/issues"
  },
  "homepage": "https://github.com/Goldhumorist/devtools#readme",
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@types/chai": "4.3.4",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/mocha": "10.0.1",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "4.3.7",
    "commitizen": "4.3.0",
    "cz-customizable": "7.0.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "8.0.3",
    "mocha": "10.2.0",
    "nodemon": "2.0.22",
    "rimraf": "5.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.18.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  }
